<%- model_class = Licence -%>
<div class="page-header">
  <h1>Licen√ßa de Software</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:client_id) %>:</strong></dt>
  <dd><%= @licence.client.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serial_bios) %>:</strong></dt>
  <dd><%= @licence.serial_bios %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_licence) %>:</strong></dt>
  <dd><%= @licence.type_licence %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @licence.price %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              licences_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_licence_path(@licence), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              licence_path(@licence),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
