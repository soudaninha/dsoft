<%= form_for @licence, :html => { :class => "form-horizontal licence" } do |f| %>

  <% if @licence.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@licence.errors.count, "error") %> prohibited this licence from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @licence.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'cliente', :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
       <%= f.collection_select(:client_id, @clients, :id, :name, {include_blank: 'Selecione o cliente:'},:class => 'form-control') %>
    
    </div>
    <%=f.error_span(:client_id) %>
  </div>
  <div class="form-group">
    <%= f.label 'serial Bios', :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :serial_bios, :class => 'form-control' %>
    </div>
    <%=f.error_span(:serial_bios) %>
  </div>
  <div class="form-group">
    <%= f.label 'tipo de licença', :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.select(:type_licence, options_for_select([["POR PERIODO"],["MENSAL"], ["VITALÍCIA"]], @licence.type_licence), {include_blank: 'Selecione'}, :class => 'form-control') %>

    </div>
    <%=f.error_span(:type_licence) %>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :price, :class => 'form-control', id: 'real' %>
    </div>
    <%=f.error_span(:price) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                licences_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
