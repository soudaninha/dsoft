<%= form_for @product, :html => { :class => "form-horizontal product" } do |f| %>

  <% if @product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "nome", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  
  <div class="form-group">
    <%= f.label "estoque", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :check_stock %>
    </div>
    <%=f.error_span(:check_stock) %>
  </div>
  
  <div class="form-group">
    <%= f.label "Qnt", :class => 'control-label col-lg-2' %>
    <div class="col-lg-1">
      <%= f.number_field :qnt, :class => 'form-control' %>
    </div>
    <%=f.error_span(:qnt) %>
  </div>
  <div class="form-group">
    <%= f.label "valor custo R$", :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :cost_value, :class => 'form-control', id: 'cost_value' %>
    </div>
    <%=f.error_span(:cost_value) %>
  </div>
  <div class="form-group">
    <%= f.label "valor venda R$", :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :cost_sale, :class => 'form-control', id: 'cost_sale' %>
    </div>
    <%=f.error_span(:cost_sale) %>
  </div>
  <div class="form-group">
    <%= f.label "fornecedor", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      
      <%= f.collection_select(:supplier_id, @suppliers, :id, :name, {include_blank: 'Selecione:'},:class => 'form-control') %>

    </div>
    <%=f.error_span(:supplier_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Salvar", :class => 'btn btn-primary' %>
      <%= link_to "Cancelar",
                products_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
