<%- model_class = Product -%>
<div class="page-header">
  <h1>Produto</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name("nome") %>:</strong></dt>
  <dd><%= @product.name %></dd>
  <dt><strong><%= model_class.human_attribute_name("estoque") %>:</strong></dt>
  <% if @product.check_stock == true %>
  <dd><%= 'SIM' %></dd>
  <% else %>
  <dd><%= 'NÃƒO' %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name("qnt") %>:</strong></dt>
  <dd><%= @product.qnt %></dd>
  <dt><strong><%= model_class.human_attribute_name("valor custo R$") %>:</strong></dt>
  <dd><%= @product.cost_value %></dd>
  <dt><strong><%= model_class.human_attribute_name("valor venda R$") %>:</strong></dt>
  <dd><%= @product.cost_sale %></dd>
  <dt><strong><%= model_class.human_attribute_name("Fornecedor") %>:</strong></dt>
  <dd><%= @product.supplier.name %></dd>
</dl>

<%= link_to "Voltar",
              products_path, :class => 'btn btn-default'  %>
<%= link_to "Editar",
              edit_product_path(@product), :class => 'btn btn-default' %>
<%= link_to "Excluir",
              product_path(@product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
