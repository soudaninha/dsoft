<%- model_class = Payment -%>
<div class="page-header">
  <h1>Pagamento</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name('Nº docto') %>:</strong></dt>
  <dd><%= @payment.doc_number %></dd>
  <dt><strong><%= model_class.human_attribute_name('tipo docto') %>:</strong></dt>
  <dd><%= @payment.type_doc %></dd>
    <dt><strong><%= model_class.human_attribute_name('fornecedor') %>:</strong></dt>
  <dd><%= @payment.supplier.name %></dd>
  <dt><strong><%= model_class.human_attribute_name('descrição') %>:</strong></dt>
  <dd><%= @payment.description %></dd>
  <dt><strong><%= model_class.human_attribute_name('data vencto') %>:</strong></dt>
  <dd><%= l @payment.due_date %></dd>
  <dt><strong><%= model_class.human_attribute_name('data pagto') %>:</strong></dt>
  <dd><%= l @payment.payment_date %></dd>
  <dt><strong><%= model_class.human_attribute_name('parcelas') %>:</strong></dt>
  <dd><%= @payment.installments %></dd>
  <dt><strong><%= model_class.human_attribute_name('valor docto R$') %>:</strong></dt>
  <dd><%= @payment.value_doc %></dd>
  <dt><strong><%= model_class.human_attribute_name('status') %>:</strong></dt>
  <dd><%= @payment.status %></dd>


</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              payments_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_payment_path(@payment), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              payment_path(@payment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
