<%= form_for @extra_sale, :html => { :class => "form-horizontal extra_sale" } do |f| %>

  <% if @extra_sale.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@extra_sale.errors.count, "error") %> prohibited this extra_sale from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @extra_sale.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'cliente', :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.collection_select(:client_id, @clients, :id, :name, {include_blank: 'Selecione o cliente:'}, :class => 'form-control') %>
    </div>
    <%=f.error_span(:client_id) %>
  </div>
  <div class="form-group">
    <%= f.label 'descrição', :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :product, :class => 'form-control' %>
    </div>
    <%=f.error_span(:product) %>
  </div>
  <div class="form-group">
    <%= f.label 'valor', :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :value, :class => 'form-control', id: 'real' %>
    </div>
    <%=f.error_span(:value) %>
  </div>
  <div class="form-group">
    <%= f.label 'vencimento', :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.date_field :due_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:due_date) %>
  </div>
  <div class="form-group">
    <%= f.label :obs, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :obs, :class => 'form-control' %>
    </div>
    <%=f.error_span(:obs) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                extra_sales_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
