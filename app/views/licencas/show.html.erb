<%- model_class = Licenca -%>
<div class="page-header">
  <h1>Licença</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:produto) %>:</strong></dt>
  <dd><%= @licenca.produto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serial) %>:</strong></dt>
  <dd><%= @licenca.serial %></dd>
  <dt><strong><%= model_class.human_attribute_name('cód patrimonio') %>:</strong></dt>
  <dd><%= @licenca.patrimonio.numero_patrimonio %></dd>
  
  <dt><strong><%= model_class.human_attribute_name('usuário') %>:</strong></dt>
  <dd><%= @licenca.patrimonio.ad_user.colaborador %></dd>
  
  <dt><strong><%= model_class.human_attribute_name('descrição') %>:</strong></dt>
  <dd><%= @licenca.descricao %></dd>
  
  <dt><strong><%= model_class.human_attribute_name('status') %>:</strong></dt>
  <dd><%= @licenca.status %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              licencas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_licenca_path(@licenca), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              licenca_path(@licenca),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
