<%- model_class = CadEmail -%>
<div class="page-header">
  <h1>Cadastro de Email / Skype</h1>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_cad_email_path,
            :class => 'btn btn-primary', id: 'printbtn' %>

<%= link_to 'Painel de controle', dashboard_servproject_path, class: 'btn btn-default', id: 'printbtn' %>

<%= link_to 'Excel Download', cad_emails_path(:format => :xls, :exportar => 'SIM'), class: 'btn btn-success', id: 'printbtn' %>

<button type="button" id ="printbtn" class="btn btn-success", onclick ="window.print();return false;">Imprimir</button>

</div>

<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name('email') %></th>
      <th><%= model_class.human_attribute_name('senha email') %></th>
      <th><%= model_class.human_attribute_name('skype') %></th>
      <th><%= model_class.human_attribute_name('senha skype') %></th>
      <th><%= model_class.human_attribute_name('criado em') %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cad_emails.each do |cad_email| %>
      <tr>
        <td><%= link_to cad_email.email, cad_email_path(cad_email) %></td>
        <td><%= cad_email.senha_email %></td>
        <td><%= cad_email.skype %></td>
        <td><%= cad_email.senha_skype %></td>
        <td><%= cad_email.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_cad_email_path(cad_email), :class => 'btn btn-default btn-xs', id: 'printbtn' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      cad_email_path(cad_email),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger', id: 'printbtn' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
Total de emails cadastrados: <b><%= @conta_emails %></b>

