<%= form_for @dns_server, :html => { :class => "form-horizontal dns_server" } do |f| %>

  <% if @dns_server.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@dns_server.errors.count, "error") %> prohibited this dns_server from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @dns_server.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "email", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label "senha", :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.text_field :password, :class => 'form-control' %>
    </div>
    <%=f.error_span(:password) %>
  </div>
  <div class="form-group">
    <%= f.label "DNS", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.text_field :dns, :class => 'form-control' %>
    </div>
    <%=f.error_span(:dns) %>
  </div>
  <div class="form-group">
    <%= f.label "cliente", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      
      <%= f.collection_select(:client_id, @clients, :id, :name, {include_blank: 'Selecione:'},:class => 'form-control') %>

    </div>
    <%=f.error_span(:client_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Salvar", :class => 'btn btn-primary' %>
      <%= link_to "Cancelar",
                dns_servers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
