<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:colaborador) %>:</strong></dt>
  <dd><%= @ad_user.colaborador %></dd>
  <dt><strong><%= model_class.human_attribute_name(:departamento) %>:</strong></dt>
  <dd><%= @ad_user.departamento %></dd>
