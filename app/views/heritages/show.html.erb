<%- model_class = Heritage -%>
<div class="page-header">
  <h1>Patrimonio</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name("Descrição") %>:</strong></dt>
  <dd><%= @heritage.description %></dd>
  <dt><strong><%= model_class.human_attribute_name("Tipo contrato") %>:</strong></dt>
  <dd><%= @heritage.type_contract %></dd>
  <dt><strong><%= model_class.human_attribute_name("Cliente") %>:</strong></dt>
  <dd><%= @client.name %></dd>
</dl>

<%= link_to "Voltar",
              heritages_path, :class => 'btn btn-default'  %>
<%= link_to "Editar",
              edit_heritage_path(@heritage), :class => 'btn btn-default' %>
<%= link_to "Excluir",
              heritage_path(@heritage),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
