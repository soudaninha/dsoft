<%= form_for @heritage, :html => { :class => "form-horizontal heritage" } do |f| %>

  <% if @heritage.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@heritage.errors.count, "error") %> prohibited this heritage from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @heritage.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Descrição", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label "Tipo de contrato", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
    	<%= f.select(:type_contract, options_for_select([["Comodato"], ["Fica com o Cliente após o periodo"],["Sem contrato	"]], @heritage.type_contract), {include_blank: 'Selecione'},:class => 'form-control') %>
    </div>
    <%=f.error_span(:type_contract) %>
  </div>
  
  <div class="form-group">
    <%= f.label "Cliente", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.collection_select(:client_id, @clients, :id, :name, {include_blank: 'Selecione:'},:class => 'form-control') %>
          
    </div>
    <%=f.error_span(:client_id) %>
  </div>
      
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Salvar", :class => 'btn btn-primary' %>
      <%= link_to "Cancelar",
                heritages_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
