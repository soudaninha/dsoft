<%= form_for @callcenter, :html => { :class => "form-horizontal callcenter" } do |f| %>

  <% if @callcenter.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@callcenter.errors.count, "error") %> prohibited this callcenter from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @callcenter.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'cliente', :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.collection_select(:client_id, @clients, :id, :name, {include_blank: 'Selecione o cliente:'},:class => 'form-control') %>
    </div>
    <%=f.error_span(:client_id) %>
  </div>
  <div class="form-group">
    <%= f.label 'funcionário', :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.text_field :employee, :class => 'form-control', placeholder: 'digite o nome do funcionário' %>
    </div>
    <%=f.error_span(:employee) %>
  </div>
  <div class="form-group">
    <%= f.label 'departamento', :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.select(:department, options_for_select([["Administrativo"],["Compras"],["Contabíl / Fiscal"],["Diretoria"],["Engenharia"],["Logistica"],["Produção"],["Projetos"],["RH"],["T.I"],["Vendas"]], @callcenter.department), {include_blank: 'Selecione'}, :class => 'form-control') %>

    </div>
    <%=f.error_span(:department) %>
  </div>
  <div class="form-group">
    <%= f.label 'problema relatado', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :problem, :class => 'form-control', rows: '5' %>
    </div>
    <%=f.error_span(:problem) %>
  </div>
  <div class="form-group">
    <%= f.label 'solução relatada', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :solution, :class => 'form-control', rows: '5' %>
    </div>
    <%=f.error_span(:solution) %>
  </div>
  <div class="form-group">
    <%= f.label 'data finalizado', :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.date_field :date_finish, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date_finish) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Salvar', data: { disable_with: "Processando..." }, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                callcenters_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
