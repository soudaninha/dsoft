<%- model_class = Receipt -%>
<div class="page-header">
  <h1>Conta á Receber</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name('Nº doc') %>:</strong></dt>
  <dd><%= @receipt.doc_number %></dd>
  <dt><strong><%= model_class.human_attribute_name('Forma') %>:</strong></dt>
  <dd><%= @receipt.type_doc %></dd>
  <dt><strong><%= model_class.human_attribute_name('cliente') %>:</strong></dt>
  <dd><%= @receipt.client.name %></dd>
  <dt><strong><%= model_class.human_attribute_name('descrição') %>:</strong></dt>
  <dd><%= @receipt.discription %></dd>
  <dt><strong><%= model_class.human_attribute_name('data vencto') %>:</strong></dt>
  <dd><%= @receipt.due_date %></dd>
  <dt><strong><%= model_class.human_attribute_name('data recebto') %>:</strong></dt>
  <dd><%= @receipt.receipt_date %></dd>
  <dt><strong><%= model_class.human_attribute_name('parcelas') %>:</strong></dt>
  <dd><%= @receipt.installments %></dd>
  <dt><strong><%= model_class.human_attribute_name('valor doc R$') %>:</strong></dt>
  <dd><%= @receipt.value_doc %></dd>
  <dt><strong><%= model_class.human_attribute_name('status') %>:</strong></dt>
  <dd><%= @receipt.status %></dd>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              receipts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_receipt_path(@receipt), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              receipt_path(@receipt),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
